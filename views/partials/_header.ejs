<div class='row'>
  <div class='col-xs-6 col-xs-offset-6'>
    <% if (!username) { %>
      <form class='form-inline pull-right' method='POST' action='/login'>
          <div class='input-group'>
            <input id='username' class='form-control' type='text' name='username' width='100' placeholder='username'>
            <span class='input-group-btn'>
              <button class='btn btn-info' type='submit'>Login</button>
            </span>
          </div>
          <a href='/register' class='btn btn-info'>Register</a>
      </form>
    <% } else { %>
      <form class='inline-form pull-right' method='POST' action='/logout'>
        <span>Hi, <%= username %> </span>
        <button class='btn btn-info' type='submit'>Logout</button>
      </form>
    <% } %>
  </div>
</div>
<div class='row'>
  <div class='col-lg-12'>
    <a href='/urls'>
      <h3 class = 'text-muted'>TinyApp</h3>
    </a>
  </div>
</div>