<!DOCTYPE html>
<html lang='en'>
<head>
  <meta charset = 'utf-8'>
  <title>TinyApp</title>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css'>
  <link rel='stylesheet' href='/stylesheets/my-css.css'>
</head>
<body>
  <div class='container'>
    <% include partials/_header %>
    <div class='jumbotron'>
      <h3>Shorten URLS!</h3>
      <p class='lead'>The current collection of URLs is below:</p>
    </div>
    <div class='row'>
      <div class='col-lg-12'>
          <div class="panel panel-default">
            <table class="table table-hover">
              <tbody>
                <% for (let shortURL in urls) { %>
                  <tr>
                    <td>
                      <dl class='dl-horizontal'>
                        <dt><%= shortURL %></dt>
                        <dd><%= urls[shortURL] %></dd>
                      </dl>
                    </td>
                    <td class="text-right text-nowrap">
                      <form method='POST' action='/urls/<%= shortURL %>/delete'>
                      <a href='/urls/<%= shortURL %>' class="btn btn-s btn-info">Edit</a>
                      <button class="btn btn-s btn-danger">
                        <span class="glyphicon glyphicon-trash"></span>
                      </button>
                      </form>
                    </td>
                  </tr>
                <% } %>
              <tr>
                <td colspan='2' class='text-center'>
                  <a href='/urls/new'>Shorten a new URL!</a>
                </td>
              </tr>
              </tbody>
            </table>
          </div>
      </div>
    </div>
  </div>
</body>
</html>